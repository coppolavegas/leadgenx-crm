# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database_name?connect_timeout=15

# Redis Configuration (use REDIS_URL or REDIS_HOST + REDIS_PORT)
REDIS_URL=redis://default:password@host:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Application Configuration
NODE_ENV=production
PORT=3000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=https://leadgenx.app,https://www.leadgenx.app,https://api.leadgenx.app

# External API Keys
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Feature Flags
ENABLE_INTENT_SIGNALS=false

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=info
